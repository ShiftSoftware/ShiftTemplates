@attribute [Authorize]
@attribute [Route($"/{nameof(BrandList)}")]

@using StockPlusPlus.Shared.DTOs.Product.Brand
@using ShiftSoftware.ShiftIdentity.Core.DTOs.User

<ShiftList EntitySet="Brand"
           Title="Brand List"
           T="BrandListDTO"
           Dense
           DisableActionColumn
            ComponentType="typeof(BrandForm)"
            ShowIDColumn="true"
            TypeAuthAction="StockPlusPlus.Shared.ActionTrees.StockActionTrees.Brand"
           EnableExport>

    <ButtonColumn Property="x => x.Name" Title="Name" />

    <ForeignColumn Property="x => x.CreatedByUserID"
                   Title="Created By"
                   T="BrandListDTO"
                   TEntity="UserListDTO"
                   TProperty="string"
                   BaseUrlKey="ShiftIdentityApi"
                   EntitySet="IdentityUser" />
</ShiftList>
