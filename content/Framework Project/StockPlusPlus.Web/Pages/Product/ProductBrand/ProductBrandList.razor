@attribute [Authorize]
@attribute [Route($"/{nameof(ProductBrandList)}")]

@using StockPlusPlus.Shared.DTOs.Product.ProductBrand
@using ShiftSoftware.ShiftIdentity.Core.DTOs.User

<ShiftList EntitySet="ProductBrand"
           Title="Brand List"
           T="ProductBrandListDTO"
           Dense
           DisableActionColumn
            ComponentType="typeof(ProductBrandForm)"
            ShowIDColumn="true"
            TypeAuthAction="StockPlusPlus.Shared.ActionTrees.StockActionTrees.ProductBrand"
           EnableExport>

    <ButtonColumn Property="x => x.Name" Title="Name" />

    <ForeignColumn Property="x => x.CreatedByUserID"
                   Title="Created By"
                   T="ProductBrandListDTO"
                   TEntity="UserListDTO"
                   TProperty="string"
                   BaseUrlKey="ShiftIdentityApi"
                   EntitySet="IdentityUser" />

    <ForeignColumn Property="x => x.UserGroupID"
                   Title="Assigned Group"
                   T="ProductBrandListDTO"
                   TEntity="ShiftSoftware.ShiftIdentity.Core.DTOs.UserGroup.UserGroupListDTO"
                   TProperty="string"
                   BaseUrlKey="ShiftIdentityApi"
                   EntitySet="IdentityUserGroup" />
</ShiftList>
