<div class="clock">
    <div class="week-name">
        @Date.ToString("dddd")
    </div>

    <div class="date">
        @Date.ToString("d MMMM yyyy")
    </div>
</div>

<style>
    .clock {
        border-left: 4px solid red;
        padding: 8px 10px;
        text-align: center;
        display: inline-block;
    }

    .week-name {
        font-size: 64px;
        font-weight: bold;
    }

    .date {
        font-size: 32px;
    }
</style>

@code {
    private DateTime Date = DateTime.Now;
}